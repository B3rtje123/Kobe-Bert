{
  "name": "kobe-bert",
  "version": "0.0.0",
  "scripts": {
    "dev": "npx lerna run --scope={pwa,api} dev",
    "dev:api": "npx lerna run --scope=api dev",
    "dev:pwa": "npx lerna run --scope=pwa dev",
    "dev:emulate": "npx lerna run --scope={pwa,api} dev:emulate --stream"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/B3rtje123/Kobe-Bert.git"
  },
  "author": "Bert & Kobe",
  "bugs": {
    "url": "https://github.com/B3rtje123/Kobe-Bert/issues"
  },
  "homepage": "https://github.com/B3rtje123/Kobe-Bert#readme",
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "lf"
  },
  "dependencies": {
    "@chenfengyuan/vue-barcode": "^2.0.2",
    "@unocss/preset-uno": "^0.57.1",
    "axios": "^1.6.0",
    "jsbarcode": "^3.11.6",
    "proxy-agent": "^6.3.1"
  },
  "devDependencies": {
    "@unocss/preset-web-fonts": "^0.57.1",
    "lerna": "^7.4.2"
  }
}
